    <select id="getAllReply" parameterType="Integer" resultType="board.vo.ReplyVo">
        <![CDATA[
            SELECT
                *
            FROM
                reply
            WHERE
                board_idx = #{boardIdx} AND deleted_yn = 'N'
            ORDER BY
                reply_order;
        ]]>
    </select>

