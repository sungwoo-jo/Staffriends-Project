<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="board.mapper.UserMapper">
    <insert id="insertUser" parameterType="board.vo.UserVo">
        <![CDATA[
            INSERT INTO t_user
                (
                     name,
                     username,
                     password,
                     email,
                     nickname,
                     join_date,
                     oauth
                 )
            VALUES
                (
                     #{name},
                     #{username},
                     #{password},
                     #{email},
                     #{nickname},
                     now(),
                     #{oauth}
                 )
        ]]>
    </insert>

    <select id="idCheck" parameterType="String" resultType="Integer">
        <![CDATA[
            SELECT
                count(*) as username
            FROM
                t_user
            WHERE
                username = #{username}
        ]]>
    </select>

    <select id="loginProc" parameterType="board.vo.UserVo" resultType="Integer">
        <![CDATA[
            SELECT
                id
            FROM
                t_user
            WHERE
                username = #{username} AND password = #{password}
        ]]>
    </select>

    <select id="getUserInfo" parameterType="Integer" resultType="board.vo.UserVo">
        <![CDATA[
            SELECT
                *
            FROM
                t_user
            WHERE
                id = #{id}
        ]]>
    </select>

    <update id="updateUser" parameterType="board.vo.UserVo">
        <![CDATA[
            UPDATE
                t_user
            SET
                password = #{password},
                nickname = #{nickname},
                email = #{email},
                serial_num = #{serialNum}
            WHERE
                id = #{id}
        ]]>
    </update>

    <select id="findMyId" parameterType="board.vo.UserVo" resultType="String">
        <![CDATA[
            SELECT
                IFNULL((SELECT username FROM t_user WHERE name = #{name} AND email = #{email}), 0)
        ]]>
    </select>

    <select id="findMyPassword" parameterType="board.vo.UserVo" resultType="Integer">
        <![CDATA[
            SELECT
                IFNULL((SELECT id FROM t_user WHERE username = #{username} AND name = #{name} AND email = #{email}), 0)
        ]]>
    </select>

    <update id="updatePassword" parameterType="board.vo.UserVo">
        <![CDATA[
            UPDATE
                t_user
            SET
                password = #{password}
            WHERE
                id = #{id}
        ]]>
    </update>
</mapper>